<div class="container" >
    <div class="row">
      <div class="col-12">
      <%=render 'public/header' %>
      </div>
    </div>


    <div class="row">
      <div class="col-9">
         <div class="row">
           <div class="col-8">
                  <h2>プロフィール編集</h2>
                       <% if @customer.errors.any? %>
                         <%= @customer.errors.count %>件のエラーが発生しました
                         <ul>
                           <% @customer.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                           <% end %>
                         </ul>
                          <% end %>
                          <br>

                          <%=form_with model: @customer,url:customer_path(@customer.id),method: :patch do |f| %>
                            <div class="form-group">
                                <p>プロフィール画像</p>
                                <%=f.file_field:profile_image %>
                            </div>
                            <div class="form-group">
                                <p>姓</p>
                                <%=f.text_field:last_name,class:"form-control" %>
                            </div>
                            <div class="form-group">
                                <p>名</p>
                                <%=f.text_field:first_name,class:"form-control" %>
                            </div>
                            <div class="form-group">
                                <p>メールアドレス</p>
                                <%=f.text_field:email,class:"form-control" %>
                            </div>
                            <div class="form-group">
                                <p>自己紹介文</p>
                                <%=f.text_area:introduction, size: "40x20",class:"form-control" %>
                            </div>
                            <div>
                                <%= f.submit "変更を保存する",class:"btn btn-outline-primary btn-block" %>
                            </div>

                          <% end %>

                            <br>
                            <%= link_to "退会する",withdraw_path(@customer.id) ,method: :patch,data: { confirm: '退会すると、会員登録情報やこれまでの投稿履歴が閲覧できなくなります。本当に退会しますか？' },class:"btn btn-outline-primary" %>
                       </div>
            </div>
          </div>
      <div class="col-3">
       <%=render 'public/sidebar', genres: @genres %>
      </div>
        </div>
    </div>
</div>

