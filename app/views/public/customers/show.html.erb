<%=render 'public/header' %>
<h2><%=@customer.last_name %>
    <%=@customer.first_name %>さんの会員詳細</h2>
<%=image_tag @customer.get_profile_image(50,50) %>
<%=@customer.last_name %>
<%=@customer.first_name %>
<p>自己紹介:<%=@customer.introduction %></p>
<% if @customer==current_customer %>
<p>メールアドレス:<%=@customer.email %></p>
<%= link_to "編集する",edit_customer_path(@customer.id) %>
<% end %>

<h4>投稿した記事</h4>
<% @posts.each do |f| %>
  <%= link_to post_path(f.id) do %>
    <%=image_tag f.get_image(100,100) %>
  <% end %>
   <p>タイトル:<%=f.title %></p>
   <p>ジャンル:<%=f.genre.name %></p>
   <p>投稿日:<%= f.created_at.strftime('%Y/%m/%d') %></p>
   <p><%= link_to "#{f.comments.count} コメント", post_path(f.id) %></p>
   <% if @customer==current_customer %>
   <%= link_to "削除する",destroy_path(@customer.id,f.id) ,method: :delete , data: {confirm: "本当に削除しますか？"} %>
   <% end %>
<% end %>


