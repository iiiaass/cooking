<div class="container" >
  <div class="row">
      <div class="col-12">
      <%=render 'public/header', genres: @genres %>
      </div>
  </div>

  <div class="row">
    <div class="col-md-5 col-sm-12">
      <h2>新規会員登録</h2>
            <br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>
              <div class="form-group">
                  <%= f.label :last_name,"姓"%><br />
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder:"令和",class:"form-control"  %>
              </div>
              <div class="form-group">
                  <%= f.label :first_name,"名" %><br />
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:"道子",class:"form-control"  %>
              </div>
              <div class="form-group">
                  <%= f.label :email,"メールアドレス" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class:"form-control"  %>
              </div>
              <div class="form-group">
                  <%= f.label :password,"パスワード(6文字以上)"%>
                    <% if @minimum_password_length %>
                    <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
              </div>
              <div class="form-group">
                  <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control"  %>
              </div>

               <div>
                <%= f.submit "新規登録",class:"btn btn-outline-primary btn-block" %>
               </div>
            <% end %>

            <br>
            <p>アカウントをお持ちの方はこちらから
            <%= link_to"ログイン",new_customer_session_path %>
            を行ってください
            </p>
        </div>
    </div>
  </div>
</div>