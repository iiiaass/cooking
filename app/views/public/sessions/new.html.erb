<div class="container" >
  <div class="row">
      <div class="col-12">
      <%=render 'public/header', genres: @genres %>
      </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-sm-12">

      <h2>ログイン</h2><br>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                  <%= f.label :email,"メールアドレス" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class:"form-control"  %>
              </div>
              <div class="form-group">
                   <%= f.label :password,"パスワード" %><br />
                   <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
              </div>

              <div>
                  <%= f.submit "ログイン",class:"btn btn-outline-primary btn-block" %>
              </div>
            <% end %>
          <br>
          <p>ゲストログイン(閲覧用)は
          <%= link_to 'こちらから', public_guest_sign_in_path, method: :post %>
          </p>

          <p>アカウントをお持ちでない方はこちらから
          <%= link_to"新規登録",new_customer_registration_path %>
          を行ってください
          </p>

    </div>
  </div>
</div>