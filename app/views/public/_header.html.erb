<body>
  <header>
      <h2><%=link_to "LOGO",root_path %></h2>
   <% if customer_signed_in? %>
        <%= form_with url: posts_path, method: :get do |f| %>
         <%=f.text_field :search, :placeholder => "キーワード検索" %>
         <%=f.submit'検索する' %>
        <% end %>
      <% if current_customer.email != 'guests@example.com' %>
        <li>
          <%= link_to "マイページ", customer_path(current_customer.id) %>
        </li>
        <li>
          <%= link_to "投稿する", new_post_path %>
        </li>
      <% end %>
        <li>
        <%= link_to "投稿一覧",posts_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        </li>
    <% else %>

        <li>
          <%= link_to "新規登録",new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン",new_customer_session_path %>
        </li>
   <% end %>
  </header>
 <%= yield %>
</body>