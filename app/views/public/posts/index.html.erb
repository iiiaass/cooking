<div class="container" >
  <div class="row">
    <div class="col-md-12">
    <%=render 'public/header' %>
    </div>
  </div>

  <div class="row">

      <div class="col-9">
        <h2>レシピの一覧</h2>
        <p>検索結果 <%= @post_count %>件</p>
        <div class="row">
          <% @posts.each do |post| %>
            <div class="col-4">
              <div class="card">
                <% if post.images.attached? && post.images.first.present? %>
                  <%= link_to post_path(post.id) do %>
                    <%= image_tag post.get_image(100, 100), class: "card-img-top", size: "150x150" %>
                  <% end %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= post.title %></h5>
                  <%=image_tag post.customer.get_profile_image(50, 50) %>

                  <p class="card-text">
                    <%=post.customer.last_name %>
                    <%=post.customer.first_name %>
                  </p>
                  <div class="card-text">
                    <!--<p>ジャンル:<%#=post.genre.name %></p>-->
                    <p>投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></p>
                    
                    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <%= paginate @posts %>
      </div>
    <div class="col-3">
      <%=render 'public/sidebar', genres: @genres %>
    </div>
  </div>





</div>



