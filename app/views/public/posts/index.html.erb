<%=render 'public/header' %>
<h2>投稿一覧</h2>
<% if params[:search] %>
  検索結果<%=@posts.count %>件
<% elsif @posts.count==0 %>
  検索結果 0件
<% else %>
  表示件数<%=@posts.count %>件
<% end %>

<% @posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <%=image_tag post.get_image(100,100) %>
    <% end %>
    <p>タイトル:<%= post.title %></p>
    <p>ジャンル:<%=post.genre.name %></p>
    <p>投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></p>

<% end %>




