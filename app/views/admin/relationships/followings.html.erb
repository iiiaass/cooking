<div class="container" >
  <div class="row">
    <div class="col-12">
    <%=render 'admin/header', genres: @genres %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-sm-12">
      <h2><%=@customer.last_name %><%=@customer.first_name %>さんのフォロー</h2>
      <div class="d-flex justify-content-between">
        <h5><%=@customers_count %>人</h5>
        <% if params[:filter] %>
          <%= link_to "退会した会員を表示",admin_customer_followings_path(@customer.id),class: "btn btn-outline-primary" %>
        <% else %>
          <%= link_to "退会した会員を非表示",admin_customer_followings_path(@customer.id,{filter: "only_active"}),class: "btn btn-outline-primary" %>
        <% end %>
      </div>
      <%=render 'admin/relationships/follow',customers: @customers %>
    </div>
    <div class="col-md-3">
      <%=render 'admin/sidebar', genres: @genres %>
   </div>
  </div>
</div>